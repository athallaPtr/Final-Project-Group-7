#include <stdio.h>
#include <stdlib.h>
#include <string.h>

// ====================== ENUM, UNION, STRUCT ======================
typedef enum { 
    BUS = 1,
    TRAIN, 
    BICYCLE, 
    WALKING 
} TransportType;

typedef union {
    float cost;      
    int calories;    
} CostOrCalories;

typedef struct {
    char destination[50];
    float distance;
    float emissionSaved;
    TransportType type;
    CostOrCalories info;
} Trip;

// ======== FUNCTION PROTOTYPES ========
void addTrip(); 
void showTrips(); (atha)
void showSummary(); (atha)




int main(){

    // Input System + Menu Handling (atha)

    trips = malloc(capacity * sizeof(struct Trip));

    int choice;

    while (1) {
        printf("\n====== SDG 11: Sustainable Mobility System ======\n");
        printf("1. Add Trip\n");
        printf("2. View Trips\n");
        printf("3. Show Summary\n");
        printf("4. Export Report\n");
        printf("5. Exit\n");
        printf("Choose: ");
        scanf("%d", &choice);

        switch(choice) {
            case 1: addTrip(); break;
            case 2: showTrips(); break;
            case 3: showSummary(); break;
            case 4: exportReport(); break;
            case 5: 
                printf("\nExiting program...\n");
                free(trips);
                return 0;
            default:
                printf("Invalid input.\n");
        }
    }

    return 0;
}

// ==FUNCTION==

