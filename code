#include <stdio.h>
#include <stdlib.h>
#include <string.h>

// ====================== ENUM, UNION, STRUCT ======================
//Raisha : Transportation Options
typedef enum { 
    BUS = 1,
    TRAIN, 
    BICYCLE, 
    WALKING 
} TransportType;

typedef union {
    float cost;      
    int calories;    
} CostOrCalories;

//Alia : Trip recorder data structure
typedef struct {
    char destination[50];
    float distance;
    float emissionSaved;
    TransportType type;
    CostOrCalories info;
} Trip;

Trip *trips = NULL; 
int count = 0; 
int capacity = 5;

// ======== FUNCTION PROTOTYPES ========
void addTrip(); 
void showTrips(); //(atha)
void showSummary(); //(atha)
char* getTransportName(TransportType type);  //(Raisha)

void expandMemoryIfNeeded(); //(alia)




int main(){

    // Input System + Menu Handling (atha)

    trips = malloc(capacity * sizeof(struct Trip));

    int choice;

    while (1) {
        printf("\n====== SDG 11: Sustainable Mobility System ======\n");
        printf("1. Add Trip\n");
        printf("2. View Trips\n");
        printf("3. Show Summary\n");
        printf("4. Export Report\n");
        printf("5. Exit\n");
        printf("Choose: ");
        scanf("%d", &choice);

        switch(choice) {
            case 1: addTrip(); break;
            case 2: showTrips(); break;
            case 3: showSummary(); break;
            case 4: exportReport(); break;
            case 5: 
                printf("\nExiting program...\n");
                free(trips);
                return 0;
            default:
                printf("Invalid input.\n");
        }
    }

    return 0;
}

// ==FUNCTION==

void showTrips() {
    if(count == 0) {
        printf("\nNo trips recorded.\n");
        return;
    }

    printf("\n--- Trip History ---\n");
}

void showSummary() {
    if(count == 0){
        printf("\nNo summary available.\n");
        return;
    }
}

// ------------------- HELPERS ---------------------------


// Raisha
char* getTransportName(TransportType type){
    if(type == BUS) return "Bus";
    if(type == TRAIN) return "Train";
    if(type == BICYCLE) return "Bicycle";
    return "Walking";
}









void expandMemoryIfNeeded(){
if(count>= capacity) {
capacity *= 2;
trips = realloc(trips, capacity * sizeof(Trip));
}
